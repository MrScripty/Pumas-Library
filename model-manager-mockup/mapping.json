{
  "lm_studio": {
    "target_subdir": "",
    "central_category": "llm",
    "patterns": ["*.gguf", "*.pt", "*.json", "*.bin"],
    "filters": {
      "model_type": ["llm", "multimodal"],
      "exclude_extensions": [],
      "tags": ["gguf-compatible"]
    },
    "method": "symlink",  // or "config" for apps that support it
    "rename_rules": []
  },
