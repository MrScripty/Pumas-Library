{
  "name": "pumas-library-electron",
  "version": "0.1.0",
  "description": "Electron wrapper for Pumas Library",
  "main": "dist/main.js",
  "author": "Pumas Library Team",
  "license": "MIT",
  "scripts": {
    "validate": "tsc --noEmit",
    "prebuild": "npm run validate",
    "build": "tsc",
    "watch": "tsc -w",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "package": "npm run build && electron-builder",
    "package:linux": "npm run build && electron-builder --linux",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.pumas.library",
    "productName": "Pumas Library",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Development",
      "maintainer": "Pumas Library Team",
      "icon": "../frontend/public/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "../frontend/public/icon.ico",
      "publisherName": "Pumas Library Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pumas Library"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "../frontend/public/icon.icns",
      "category": "public.app-category.developer-tools"
    }
  }
}
